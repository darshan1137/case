<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_gradient"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/word_capture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CAPTURE"
            android:textColor="@color/primary"
            android:textSize="36sp"
            android:textStyle="bold"
            android:letterSpacing="0.15"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/word_assess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ASSESS"
            android:textColor="@color/accent"
            android:textSize="36sp"
            android:textStyle="bold"
            android:letterSpacing="0.15"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/word_serve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SERVE"
            android:textColor="@color/secondary"
            android:textSize="36sp"
            android:textStyle="bold"
            android:letterSpacing="0.15"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/word_evolve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EVOLVE"
            android:textColor="@color/primary_variant"
            android:textSize="36sp"
            android:textStyle="bold"
            android:letterSpacing="0.15"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/brand_case"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/primary"
            android:textSize="56sp"
            android:textStyle="bold"
            android:letterSpacing="0.2"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/splash_logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="@dimen/margin_medium"
            android:contentDescription="@string/app_name"
            android:src="@drawable/logo"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/brand_full_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:text="Capture • Assess • Serve • Evolve"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:letterSpacing="0.05"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:text="@string/app_tagline"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_size_normal"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_large"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="invisible">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/designed_by"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:textStyle="bold" />
            
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Made with ❤️ in India"
            android:textColor="@color/text_hint"
            android:textSize="11sp" />
    </LinearLayout>

</RelativeLayout>
